<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:weightSum="8"
    android:background="@drawable/selecttrainersbox"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="2">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:src="@drawable/profilepic"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_weight="1.8">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:gravity="center"
            android:text="Fazal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="10dp" />
<!--        <TextView
            android:id="@+id/center"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000"
            android:text="Fazal GYM"/>-->

    </LinearLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">
        <ImageView
            android:id="@+id/ratingImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/ratingbadgeplygon"/>
        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/RatingBar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/star_no"
            android:layout_centerHorizontal="true"
            android:numStars="3"
            android:rating="3"
            android:stepSize="0" />

        <TextView
            android:id="@+id/star_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="3"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#fff" />

        <!-- <RatingBar
             android:id="@+id/MyRating"
             style="?android:attr/ratingBarStyleSmall"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="40dp"
             android:isIndicator="true"
             android:numStars="5"
             android:layout_marginLeft="10dp"
             android:stepSize="0.1" />-->

    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:weightSum="4"
        android:layout_weight="2.3">
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textColor="#fd8002"
            android:gravity="center"
            android:text="$400"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/distanceiconkm"/>
            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center"
                android:text="100 kms"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
